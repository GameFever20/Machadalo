<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/student_layout_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/student_layout_age_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/student_layout_gender_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:textAlignment="textEnd" />

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="0dp"
            >

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/student_layout_hindimarks_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/student_layout_englishmarks_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"

            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardBackgroundColor="@color/lightBlack"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/student_layout_totalmarks_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textAlignment="textStart"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/student_layout_averagemarks_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textAlignment="textStart"
            android:textSize="14sp"

            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/lightBlack"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v7.widget.CardView>